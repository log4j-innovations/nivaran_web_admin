rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin'
      );
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin'
      );
    }

    // Issues collection
    match /issues/{issueId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.assignedTo ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin']
      );
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin';
    }

    // Areas collection
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin'];
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.recipientId;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin'];
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin';
    }

    // Analytics collection
    match /analytics_metrics/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin'];
    }

    // Area metrics collection
    match /area_metrics/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin'];
    }

    // User metrics collection
    match /user_metrics/{docId} {
      allow read: if request.auth != null && (
        request.auth.uid == docId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin']
      );
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Engineer', 'SuperAdmin'];
    }
  }
}
